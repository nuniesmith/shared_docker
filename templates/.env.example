# FKS Trading Systems - Environment Configuration

# Database Configuration
DB_PASSWORD=your_secure_db_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# Service Configuration
BUILD_VERSION=1.0.0
BUILD_TYPE=cpu
REGISTRY=your-registry.com

# API Service
API_LOG_LEVEL=info
API_WORKERS=4
API_MAX_REQUESTS=1000
API_TIMEOUT=30

# Engine Service  
ENGINE_LOG_LEVEL=info
ENGINE_MAX_CONNECTIONS=100
ENGINE_BUFFER_SIZE=1024

# NinjaTrader Service
NINJA_LICENSE_KEY=your_ninja_license_key
NINJA_DATA_PATH=/app/data
NINJA_LOG_LEVEL=Information

# Web Frontend
WEB_API_URL=http://localhost:8000
WEB_ENVIRONMENT=production

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring
METRICS_ENABLED=true
TRACING_ENABLED=true
HEALTH_CHECK_INTERVAL=30s

# Development overrides (uncomment for dev)
# BUILD_TYPE=cpu
# API_LOG_LEVEL=debug
# ENGINE_LOG_LEVEL=debug
# WEB_ENVIRONMENT=development
